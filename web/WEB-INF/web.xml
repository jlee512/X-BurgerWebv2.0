<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">

    <!--=========================================================-->
    <!--Servlet Mapping-->
    <servlet>
        <servlet-name>loginValidation</servlet-name>
        <servlet-class>main.java.servlet.LoginValidation</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>loginValidation</servlet-name>
        <url-pattern>/login_validation</url-pattern>
    </servlet-mapping>

    <!--Jack to update-->
    <servlet>
        <servlet-name>registrationUpdate</servlet-name>
        <servlet-class>main.java.servlet.RegistrationUpdate</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>registrationUpdate</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>setupOrderPage</servlet-name>
        <servlet-class>main.java.servlet.SetupOrderPage</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>setupOrderPage</servlet-name>
        <url-pattern>/order</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>main.java.servlet.Logout</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <!--TEST-->
    <servlet>
        <servlet-name>helloServlet</servlet-name>
        <servlet-class>main.java.servlet.HelloServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>helloServlet</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>

    <!--=======================================================================================================-->
    <!--JSP Mapping-->
    <servlet>
        <servlet-name>indexJSP</servlet-name>
        <jsp-file>/indexxburger.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>indexJSP</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>loginJSP</servlet-name>
        <jsp-file>/login.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>loginJSP</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>orderJSP</servlet-name>
        <jsp-file>/orderpage.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>orderJSP</servlet-name>
        <url-pattern>/make_order</url-pattern>
    </servlet-mapping>
    <!--TEST-->
    <servlet>
        <servlet-name>testJSP</servlet-name>
        <jsp-file>/test.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>testJSP</servlet-name>
        <url-pattern>/test</url-pattern>
    </servlet-mapping>

    <!--=======================================================================================================-->
    <!--Generic Mapping-->

    <mime-mapping>
        <extension>jpg</extension>
        <mime-type>image/jpeg</mime-type>
    </mime-mapping>

    <mime-mapping>
        <extension>png</extension>
        <mime-type>image/png</mime-type>
    </mime-mapping>

    <mime-mapping>
        <extension>css</extension>
        <mime-type>text/css</mime-type>
    </mime-mapping>

    <mime-mapping>
        <extension>js</extension>
        <mime-type>text/javascript</mime-type>
    </mime-mapping>
    
    <mime-mapping>
        <extension>mp4</extension>
        <mime-type>video/mp4</mime-type>
    </mime-mapping>

</web-app>